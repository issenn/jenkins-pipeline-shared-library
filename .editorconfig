# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

# Unix-style newlines with a newline ending every file
# Use UTF-8 by default
[*]
trim_trailing_whitespace = true
insert_final_newline = true

[_*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf

[VERSION]
insert_final_newline = false

[ChangeLog]
indent_size = 8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
indent_size = 8
tab_width = 4

[Dockerfile]
indent_style = space
indent_size = 2

[Corefile]
indent_style = space
indent_size = 2

# Use 4 spaces for indentation in Markdown files
[*.md]
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

[*.{json,json5}]
indent_style = space
indent_size = 2

[.vscode/*.json]
indent_style = space
indent_size = 2

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4
tab_width = 8

[*.tmpl]
indent_style = tab
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.less]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 4

[*.groovy]
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

[*.{sh,zsh}]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.[ch]]
indent_size = 4

[*.conf]
indent_size = 2

[*.php]
indent_size = 4

[DOCKER_REPOSITORY]
insert_final_newline = false

[DOCKER_TAG_LATEST]
insert_final_newline = false

[BLACKLIST]
insert_final_newline = false

# Windows style line endings for Gradlew bat file
[gradlew.bat]
end_of_line = crlf
indent_style = space
indent_size = 2
